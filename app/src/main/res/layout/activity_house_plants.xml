<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green"
    tools:context=".GroundCovers">
    <TextView
        android:id="@+id/backToCategoriesBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="sans-serif-black"
        android:text="Back to Categories"
        android:textColor="#E8F5E9"
        app:layout_constraintBottom_toTopOf="@+id/recycle_view_houseplants"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@+id/backToCategoriesBtn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recycle_view_houseplants">

    </androidx.recyclerview.widget.RecyclerView>

</RelativeLayout>